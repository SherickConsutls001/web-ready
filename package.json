{
  "name": "talentbridge",
  "version": "1.0.0",
  "description": "TalentBridge - Freelance & Services Marketplace",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "install:frontend": "cd frontend && yarn install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "dev:frontend": "cd frontend && yarn start",
    "dev:backend": "cd backend && uvicorn server:app --reload --port 8001",
    "build:frontend": "cd frontend && yarn build",
    "start:backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port ${PORT:-8001}"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "marketplace",
    "freelance",
    "react",
    "fastapi"
  ],
  "license": "MIT"
}
